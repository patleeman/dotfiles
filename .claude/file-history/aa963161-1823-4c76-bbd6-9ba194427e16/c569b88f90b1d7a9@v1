  --color-surface: rgb(var(--surface));
  --color-surface-hover: rgb(var(--surface-hover));
  --color-border: rgb(var(--border));
  --color-accent: rgb(var(--accent));
  --color-accent-hover: rgb(var(--accent-hover));
  --color-text-primary: rgb(var(--text-primary));
  --color-text-secondary: rgb(var(--text-secondary));
  --color-text-tertiary: rgb(var(--text-tertiary));

  --color-status-success: rgb(var(--status-success));
  --color-status-warning: rgb(var(--status-warning));
  --color-status-error: rgb(var(--status-error));
}

@layer base {
  :root {
    --background: 15 17 23;
    --surface: 10 11 15;
    --surface-hover: 30 41 59;
    --border: 30 41 59;
