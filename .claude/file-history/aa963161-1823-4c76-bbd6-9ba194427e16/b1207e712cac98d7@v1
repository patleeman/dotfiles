import React from 'react';

interface TagProps {
  children: React.ReactNode;
  color?: string;
}

export const Tag: React.FC<TagProps> = ({ children, color = '#475569' }) => (
  <span style={{
    display: 'inline-block',
    padding: '1px 5px',
    fontSize: '10px',
    fontFamily: 'monospace',
    backgroundColor: `${color}22`,
    color: color,
    borderRadius: '2px',
    border: `1px solid ${color}44`,
  }}>
    {children}
  </span>
);
