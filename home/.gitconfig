[user]
  name = Patrick Lee
  email = git@patricklee.nyc
[push]
  default = current
[pull]
  rebase = true
[code]
  editor = nvim
[init]
  defaultBranch = main
[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
